<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeManagementApp.Pages.LoginPage"
             Title="Log In">
    <VerticalStackLayout>
        <Label 
            Text="Please Log In to proceed!" 
            FontSize="16"
            FontAttributes="Bold"
            Margin="5,0,5,3" />
        <Label 
            Text="E-mail:"
            Margin="5,0,5,0"/>
        <Entry 
            x:Name="EntryEMail" 
            Placeholder="Enter your e-mail"
            Margin="5,0,5,3"/>
        <Label 
            Text="Password:"
            Margin="5,0,5,0"/>
        <Entry 
            x:Name="EntryPassword" 
            Placeholder="Enter your Password"
            Margin="5,0,5,0"/>
        <Button 
            x:Name="btnLogIn"  
            Clicked="BtnLogIn_Clicked" 
            Text="Log In"
            Margin="5,3,5,0"/>
        <Label 
            Text="Don't have an account?"
            Margin="5,30,5,3"/>
        <Button 
            x:Name="btnGoToSignUpPage" 
            Clicked="BtnGoToSignUpPage_Clicked" 
            Text="Sign Up"
            Margin="5,0,5,0"/>
    </VerticalStackLayout>
</ContentPage>