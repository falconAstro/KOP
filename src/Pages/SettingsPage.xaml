<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeManagementApp.Pages.SettingsPage"
             Title="Settings">
    <VerticalStackLayout>
        <Label Text="My account details:"
               Style="{StaticResource Headline}"/>
        <Label x:Name="UsernameLabel" Margin="5"/>
        <Label x:Name="IdLabel" Margin="5"/>
        <Label x:Name="EmailLabel" Margin="5"/>
        <Button 
            x:Name="btnSignOut"  
            Clicked="BtnSignOut_Clicked" 
            Text="Sign Out"
            Margin="6"/>
        <Label Text="App information"
               Style="{StaticResource Headline}"/>
        <Label Text="Alpha 1.1"
               Margin="5"/>
    </VerticalStackLayout>
</ContentPage>